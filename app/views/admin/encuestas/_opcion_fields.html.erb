<div class="nested-fields">
	<div class="col m4">
		<div class="card">
			<%= link_to_remove_association f, class: 'waves-effect waves-light btn-floating right red' do %>
				<i class="mdi-content-clear"></i>
			<% end %>
			<div class="input-field">
				<%= f.label :nombre %>
				<%= f.text_field :nombre %>
			</div>
			<div class="input-field">
				<%= f.label :color %>
				<%= f.text_field :color %>
			</div>
			<div class="input-field">
				<%= f.label :imagen %>
				<%= f.file_field :imagen %>
			</div>
		</div>
	</div>
</div>